<div class="body-containers">
  <h1>Welcome to Noteful<h1>
</div>

<div class="body-containers">
  <%= link_to "Add New Note", new_note_path %><br>
</div>

<div class="body-containers">
  <h3> Choose a Tag below to see only Notes in that category </h3><br>
  <%= form_tag :notes, method: :get do %>
  <div class="select">
    <%= select_tag :tag, options_for_select(["All Tags", "Work", "Personal", "Hobbies"]) %>
    <%= submit_tag "Submit Filter" %>
  </div>
  <% end %>
</div><br>

<div class="body-containers">
  <h2 id="here-are-your-notes">Here are your notes:<h2><br>
</div>

<div class="body-containers">
  <% @note_filter.notes.each do |note| %>
    <ul class="note">
      <p class="description">Note: <%= note.description %> <p>
      <p class="tag">Tag: <%= note.tag %> <p><br>
    </ul>
  <% end %>
</div>
